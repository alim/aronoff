<div class="row">
	<div class="span1">
	</div>
	
	<div class="span11">
		<div class="page-header">
			<h2>Resend unlock instructions</h2>
			<p>
				You can resend account unlock instructions using the form below.
			</p>
		</div>
		
		<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), 
			html: {method: :post, class: 'form-horizontal'}) do |f| %>
			
			<%= devise_error_messages! %>

			<div class='control-label'><%= f.label :email %></div>
			<div class='controls'><%= f.email_field :email, :autofocus => true %></div>
			<br/>

			<div class='form-actions'>
				<%= f.submit "Resend unlock instructions", class: 'btn btn-primary' %>
			</div>
		<% end %>

		<%= render "devise/shared/links" %>
	</div>
</div>
