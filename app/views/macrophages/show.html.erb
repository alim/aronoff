<%- model_class = Macrophage -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:strain_name) %>:</strong></dt>
  <dd><%= @macrophage.strain_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:experiment_id) %>:</strong></dt>
  <dd><%= @macrophage.experiment_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:macrophage_type) %>:</strong></dt>
  <dd><%= @macrophage.macrophage_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:treatment) %>:</strong></dt>
  <dd><%= @macrophage.treatment %></dd>
  <dt><strong><%= model_class.human_attribute_name(:dose) %>:</strong></dt>
  <dd><%= @macrophage.dose %></dd>
  <dt><strong><%= model_class.human_attribute_name(:data) %>:</strong></dt>
  <dd><%= @macrophage.data %></dd>
  <dt><strong><%= model_class.human_attribute_name(:data_type) %>:</strong></dt>
  <dd><%= @macrophage.data_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @macrophage.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:project_id) %>:</strong></dt>
  <dd><%= @macrophage.project_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              macrophages_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_macrophage_path(@macrophage), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              macrophage_path(@macrophage),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
