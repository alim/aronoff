<%= form_for @macrophage, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :strain_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :strain_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :experiment_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :experiment_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :macrophage_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :macrophage_type, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :treatment, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :treatment, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :dose, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :dose, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :data, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :data, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :data_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :data_type, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :user_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :user_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :project_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :project_id, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                macrophages_path, :class => 'btn' %>
  </div>
<% end %>
